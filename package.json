{
  "name": "portfolio",
  "private": true,
  "version": "0.7.1",
  "type": "module",
  "keywords": [
    "portfolio"
  ],
  "description": "eldarlrd's portfolio",
  "repository": "github:eldarlrd/portfolio",
  "homepage": "https://eldarlrd.github.io/portfolio",
  "author": "Eldar Pashazade <eldarlrd@pm.me> (https://eldarlrd.github.io)",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deployer": "pnpm build && gh-pages -b prod -m 'build(prod): deployment' -d dist",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives",
    "pretty": "prettier 'src/**/*.{ts,tsx,riot}' --write",
    "format": "pnpm lint --fix && pnpm pretty"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "experimentalTernaries": true,
    "overrides": [
      {
        "files": "*.riot",
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "riot": "^9.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "eslint-plugin-promise": "^6.1.1",
    "gh-pages": "^6.1.1",
    "prettier": "^3.2.5",
    "rollup-plugin-riot": "^9.0.2",
    "typescript": "^5.4.2",
    "vite": "^5.1.6"
  }
}
