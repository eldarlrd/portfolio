{
  "name": "portfolio",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "keywords": [
    "portfolio"
  ],
  "description": "eldarlrd's portfolio",
  "repository": "github:eldarlrd/portfolio",
  "homepage": "https://eldarlrd.github.io/portfolio",
  "author": "Eldar Pashazade <eldarlrd@pm.me> (https://eldarlrd.github.io)",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deployer": "pnpm build && gh-pages -b prod -m 'build(prod): deployment' -d dist",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives",
    "style": "stylelint 'src/**/*.{css,pcss,scss,sass,less,styl}'",
    "pretty": "prettier '{src,__{tests,mocks,snapshots}__}/**/*.{ts,tsx}' --write",
    "format": "pnpm lint --fix && pnpm style --fix && pnpm pretty"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-stylus/standard"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "riot": "^9.1.3",
    "stylus": "^0.62.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-riot": "^4.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "eslint-plugin-promise": "^6.1.1",
    "gh-pages": "^6.1.1",
    "prettier": "^3.2.5",
    "rollup-plugin-riot": "^9.0.2",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-stylus": "^1.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.0"
  }
}
